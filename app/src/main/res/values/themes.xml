<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.CodeMastery" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="colorOnPrimary">@color/my_light_on_primary</item>
        <item name="colorSecondary">@color/my_light_secondary</item>
        <item name="colorOnSecondary">@color/my_light_on_secondary</item>
        <item name="buttonStyle">@style/Widget.CodeMastery.Button</item>
    </style>

    <style name="Theme.CodeMastery" parent="Base.Theme.CodeMastery" />

    <!-- Custom Button Style -->
    <style name="Widget.CodeMastery.Button" parent="Widget.Material3.Button">
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">@color/my_light_button_background</item>
        <item name="android:textColor">@color/my_light_button_text</item>
    </style>

    <!-- Custom Text Color Style -->
    <style name="YourCustomTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>

